generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model prices_history {
    auctionHouseId Int?
    itemId         Int
    petSpeciesId   Int?
    minBuyout      Int?
    quantity       Int?
    marketValue    Int?
    historical     Int?
    numAuctions    Int?
    snapshotDate   DateTime @db.DateTime

    @@map("prices_history")
    @@id([itemId, snapshotDate])
}

model items {
    itemId     Int    @id
    itemName   String?
    itemRarity String?
    mediaUrl   String?
    
    @@map("items")
}
